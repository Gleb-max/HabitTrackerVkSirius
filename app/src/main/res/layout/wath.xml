<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:src="@drawable/ic_baseline_chevron_left_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginTop="61dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/nazvanie_zavedeniya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:text="Название заведения"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/share"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="61dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/nazvanie_zayavki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:layout_marginStart="24dp"
            android:text="Название заявки"
            android:textSize="23sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/nazvanie_zavedeniya"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/krah"
            android:layout_marginTop="183dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/adres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Адрес"
            android:textSize="15sp"
            android:textColor="#636363"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@id/photo"
            app:layout_constraintTop_toBottomOf="@id/photo"
            app:layout_constraintStart_toStartOf="@id/photo" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dizlike"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="742dp"
            android:layout_marginEnd="213dp"
            android:padding="2dp"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/adres"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/shape_round"
            app:strokeColor="#BCBCBC"
            app:strokeWidth="2dp"/>

        <ImageView
            android:src="@drawable/ic_baseline_thumb_down_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@id/dizlike"
            app:layout_constraintEnd_toEndOf="@id/dizlike"/>

        <TextView
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:text="56"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="@id/dizlike"
                app:layout_constraintStart_toStartOf="@id/dizlike"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="742dp"
            android:layout_marginStart="213dp"
            android:padding="2dp"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/photo"
            app:layout_constraintStart_toStartOf="@id/adres"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/shape_round"
            app:strokeColor="#BCBCBC"
            app:strokeWidth="2dp"/>

        <ImageView
            android:src="@drawable/ic_baseline_favorite_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@id/like"
            app:layout_constraintEnd_toEndOf="@id/like"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:text="56"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="@id/like"
            app:layout_constraintStart_toStartOf="@id/like"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
